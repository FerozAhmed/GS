<Window x:Class="GemScopeWPF.Licence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Licence" Height="385" Width="400" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <StackPanel Margin="10" DockPanel.Dock="Top">
                <TextBlock Height="200"  > 
                some text here that we need to write
                </TextBlock>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="100">Activation key:</Label>
                    <TextBox Width="180" Name="ActivationCode" IsReadOnly="True" ></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Width="100">Activation key:</Label>
                    <TextBox Width="180"  Name="Key" ></TextBox>
                </StackPanel>

            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="150" Height="32" Click="TryLater_Click" Margin="0,0,5,0">Try later</Button>
                <Button Width="150" Height="32" Click="VerifyKey_Click" Margin="5,0,0,0">Verify key</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
